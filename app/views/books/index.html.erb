<h1>Book List</h1>

<%= notice %>
<%= alert %>

<div class="book-grid">
  <% @books.each do |book| %>
    <div class="book-card">
      <img src="https://via.placeholder.com/150" alt="<%= book.title %>">
      <h3><%= book.title %></h3>
      <p><strong>Author:</strong> <%= book.author %></p>
      <p><%= book.description.truncate(100) %></p>
      <p><strong>Price:</strong> <%= number_to_currency(book.price) %></p>
      <div class="book-actions">
        <%= link_to 'Show', book_path(book), class: 'btn' %>
        <%= link_to 'Edit', edit_book_path(book), class: 'btn' %>
        <%= link_to 'Delete', book_path(book), method: :delete, data: { confirm: 'Are you sure you want to delete this book?' }, class: 'btn btn-danger' %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'Add New Book', new_book_path, class: 'btn btn-primary' %>
